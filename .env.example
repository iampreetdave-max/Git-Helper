# Git-Helper Configuration
# Copy this file to .env and modify as needed for local testing

# Enable/Disable Analysis Components
ENABLE_CODE_QUALITY=true
ENABLE_SECURITY_SCAN=true
ENABLE_TEST_COVERAGE=true
ENABLE_DEPENDENCY_CHECK=true
ENABLE_CHANGELOG=true
ENABLE_README_UPDATE=true
ENABLE_HEALTH_DASHBOARD=true
ENABLE_LOC_TRENDS=true

# Analysis Thresholds
MIN_COVERAGE_PERCENT=70
MIN_LINT_SCORE=7.0
MAX_COMPLEXITY_THRESHOLD=10

# File Exclusions
EXCLUDED_DIRS=.git,__pycache__,.venv,node_modules,.pytest_cache,.github
EXCLUDED_FILES=*.pyc,*.pyo,*.egg-info

# Output Configuration
OUTPUT_FORMAT=json
GENERATE_CHARTS=true

# Logging
LOG_LEVEL=INFO
VERBOSE=false
